<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:paddingBottom="@dimen/activity_vertical_margin"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin">

		<android.support.v7.widget.AppCompatButton
			android:id="@+id/btnReadOnlyData"
			style="@style/feature_button"
			android:text="Read only data"/>

		<android.support.v7.widget.AppCompatButton
			android:id="@+id/btnEditableData"
			style="@style/feature_button"
			android:text="Editable data"/>

		<android.support.v7.widget.AppCompatButton
			android:id="@+id/btnReadOnlyEntities"
			style="@style/feature_button"
			android:text="ReadOnlyEntities"/>

		<android.support.v7.widget.AppCompatButton
			android:id="@+id/btnPermissions"
			style="@style/feature_button"
			android:text="Permissions"/>

		<android.support.v7.widget.AppCompatButton
			android:id="@+id/btnOperation"
			style="@style/feature_button"
			android:text="Operation"/>

		<android.support.v7.widget.AppCompatButton
			android:id="@+id/btnLock"
			style="@style/feature_button"
			android:text="Lock"/>

		<android.support.v7.widget.AppCompatButton
			android:id="@+id/btnSplash"
			style="@style/feature_button"
			android:text="Splash"/>

		<android.support.v7.widget.AppCompatButton
			android:id="@+id/btnPages"
			style="@style/feature_button"
			android:text="Pages"/>

		<android.support.v7.widget.AppCompatButton
			android:id="@+id/btnApplication"
			style="@style/feature_button"
			android:text="Application"/>

	</LinearLayout>
</ScrollView>
